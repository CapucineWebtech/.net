<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 15px;
            text-align: center;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #ddd;
        }
        .actions {
            display: flex;
            justify-content: space-around;
        }
        button, .nav-link, .view-btn {
            padding: 8px 16px;
            margin: 5px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            color: rgb(255, 255, 255);
            border-radius: 5px;
        }
        .view-btn {
            background-color: #118777;
        }
        button.delete {
            background-color: #f44336;
        }
        .nav-link {
            background-color: #008CBA;
        }
        .nav-link:hover {
            background-color: #005f7a;
        }
        .container {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <h1>Saved Figures</h1>

    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Size</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var figure in Model)
            {
                <tr>
                    <td>@figure.Type</td>
                    <td>@figure.Size</td>
                    <td style="background-color: #@figure.Color; color: #@figure.Color;">@figure.Color</td>
                    <td class="actions">
                        <a class="view-btn" href="@Url.Action((string)figure.Type, "Figures", new { size = (int)figure.Size, color = (string)figure.Color })">View</a>
                        <form asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@figure.Id">
                            <button type="submit" class="delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <a class="nav-link" href="@Url.Action("Circle", "Figures")">Add Circle</a>
        <a class="nav-link" href="@Url.Action("Triangle", "Figures")">Add Triangle</a>
        <a class="nav-link" href="@Url.Action("Square", "Figures")">Add Square</a>
    </div>
</body>
</html>
